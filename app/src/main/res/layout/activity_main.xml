<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:gravity="center">

    <TextView
        android:id="@+id/tv_text"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center"
        android:textSize="@dimen/font_large_24"
        android:text="@string/tv_text"/>

    <ImageView
        android:id="@+id/iv_bender"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:src="@drawable/bender_dance"
        android:layout_weight="1"
        android:contentDescription="@string/iv_benderImage_description" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/color_primary"
        android:layout_marginTop="@dimen/spacing_normal_16">

        <EditText
            android:id="@+id/et_message"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:inputType="text"
            android:layout_weight="1"
            android:imeOptions="actionDone"
            android:textColor="@color/color_gray_light"
            android:textColorHint="@color/color_gray_light"
            android:hint="@string/et_hint"
            android:paddingTop="@dimen/spacing_normal_16"
            android:paddingBottom="@dimen/spacing_normal_16"
            android:layout_marginLeft="@dimen/spacing_normal_16"
            android:layout_marginRight="@dimen/spacing_normal_16"
            android:autofillHints="@string/et_hint" />

        <ImageView
            android:id="@+id/iv_send"
            android:layout_width="@dimen/width_send_btn_24"
            android:layout_height="@dimen/height_send_btn_24"
            android:src="@drawable/ic_send_black_24dp"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/spacing_normal_16"
            android:contentDescription="@string/btn_send_description" />


    </LinearLayout>


</LinearLayout>